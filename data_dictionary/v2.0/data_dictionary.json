{
    "biomarker_id": {
        "description": "Biomarker identifier. This will be automatically assigned when the data is incorporated.",
        "type": "string",
        "required": {
            "requirement": false,
            "conditionals": [],
            "exclusions": []
        }, 
        "example": ["A0034"],
        "pattern": "^.*$",
        "pattern_notes": "Matches on an entire line, regardless of content, including an empty line."
    },
    "biomarker_component": {
        "description": "List of biomarker components.",
        "type": "array",
        "required": {
            "requirement": true,
            "conditionals": [],
            "exclusions": []
        },
        "items": { 
            "biomarker": {
                "description": "Change observed in an entity that differs from normal processes.",
                "type": "string",
                "required":{
                    "requirement": true,
                    "conditionals": [],
                    "exclusions": []
                },
                "example": ["presence of rs1800562 mutation"],
                "pattern": "^.+$",
                "pattern_notes": "Matches on an entire line, regardless of content, not including an empty line."
            },
            "assessed_biomarker_entity": {
                "description": "Biomarker entity and common name/gene symbol/short name.",
                "type": "string",
                "required": {
                    "requirement": true,
                    "conditionals": [],
                    "exclusions": []
                },
                "example": ["rs1800562 mutation in hereditary haemochromatosis protein (hereditary hemochromatosis protein) (HFE)"],
                "pattern": "^.+$",
                "pattern_notes": "Matches on an entire line, regardless of content, not including an empty line."
            },
            "assessed_biomarker_entity_id": {
                "description": "Accession or identifier that matches the biomarker term.",
                "type": "string",
                "required": {
                    "requirement": true,
                    "conditionals": [],
                    "exclusions": []
                },
                "example": ["dbSNP:rs1800562"],
                "pattern": "^.+:.+$",
                "pattern_notes": "Matches on a value in the format of \"string:string\", not including empty strings."
            },
            "assessed_entity_type": {
                "description": "Entity type of the biomarker.",
                "type": "string",
                "required": {
                    "requirement": true,
                    "conditionals": [],
                    "exclusions": []
                },
                "example": ["gene"],
                "pattern": "^.+$",
                "pattern_notes": "Matches on an entire line, regardless of content, not including an empty line."
            },
            "loinc_code": {
                "description": "Lab test ID associated with biomarker.",
                "type": "string",
                "required": {
                    "requirement": false,
                    "conditionals": [],
                    "exclusions": []
                },
                "example": ["34519-9"],
                "pattern": "^\\d+-\\d$",
                "pattern_notes": "Matches on a value in the format of \"number-single number\"."
            }
        }   
    },
    "best_biomarker_role": {
        "description": "Category of BEST biomarker.",
        "type": "string",
        "required": {
            "requirement": true,
            "conditionals": [],
            "exclusions": []
        },
        "example": ["risk", "diagnostic"],
        "pattern": "^(risk|diagnostic|prognostic|monitoring|predictive|response|safety)$",
        "pattern_notes": "Matches one of these values: risk, diagnostic, prognostic, monitoring, predictive, response, safety"
    },
    "condition": {
        "description": "Component for the condition data.",
        "type": "object",
        "required": {
            "requirement": "conditional",
            "conditionals": [],
            "exclusions": ["exposure_agent"]
        },
        "items": { 
            "condition_id": {
                "description": "Condition identifier.",
                "type": "integer",
                "required": {
                    "requirement": true,
                    "conditionals": [],
                    "exclusions": []
                },
                "example": [1612],
                "pattern": "^.*$",
                "pattern_notes": "Matches on an entire line, regardless of content, including an empty line."
            },
            "recommended_name": {
                "description": "Metadata for the recommended condition name.",
                "type": "object",
                "required": {
                    "requirement": true,
                    "conditionals": [],
                    "exclusions": []
                },
                "items": {
                    "id": {
                        "description": "Condition identifier.",
                        "type": "integer",
                        "required": {
                            "requirement": true,
                            "conditionals": [],
                            "exclusions": []
                        },
                        "example": [1612],
                        "pattern": "^.+$",
                        "pattern_notes": "Matches on an entire line, regardless of content, not including an empty line."
                    },
                    "name": {
                        "description": "Name of the condition.",
                        "type": "string",
                        "required": {
                            "requirement": true,
                            "conditionals": [],
                            "exclusions": []
                        },
                        "example": ["breast cancer"],
                        "pattern": "^.+$",
                        "pattern_notes": "Matches on an entire line, regardless of content, not including an empty line."
                    },
                    "description": {
                        "description": "Description of the condition",
                        "type": "string",
                        "required": {
                            "requirement": false,
                            "conditionals": [],
                            "exclusions": []
                        },
                        "example": ["A thoracic cancer that originates in the mammary gland."],
                        "pattern": "^.+$",
                        "pattern_notes": "Matches on an entire line, regardless of content, not including an empty line."
                    },
                    "resource": {
                        "description": "Resource the condition is defined in.",
                        "type": "string",
                        "required": {
                            "requirement": true,
                            "conditionals": [],
                            "exclusions": []
                        },
                        "example": ["DOID"],
                        "pattern": "^.+$",
                        "pattern_notes": "Matches on an entire line, regardless of content, not including an empty line."
                    },
                    "url": {
                        "description": "URL to the condition in the resource",
                        "type": "string",
                        "required": {
                            "requirement": true,
                            "conditionals": [],
                            "exclusions": []
                        },
                        "example": ["https://disease-ontology.org/term/DOID:1612/"],
                        "pattern": "^(https?:\\/\\/)?([\\da-z\\.-]+)\\.([a-z\\.]{2,6})([\/\\w \\.-]*)*\/?$",
                        "pattern_notes": "Matches on a general URL format. The first part matches optionally on the inclusion of 'http://' or 'https://'. The second part matches on a domain name, allowing for digits, letters, dots, and hyphens. The third part matches the domain extension, like '.com' or '.org'. The last part allows for the URL to optionally end with a slash."
                    }
                }
                
            },
            "synonyms": {
                "description": "Metadata for synonyms to the condition name.",
                "type": "array",
                "required": {
                    "requirement": false,
                    "conditionals": [],
                    "exclusions": []
                },
                "items": {
                    "id": {
                        "description": "Identifier for the condition synonym.",
                        "type": "integer",
                        "required": {
                            "requirement": true,
                            "conditionals": [],
                            "exclusions": []
                        },
                        "example": [],
                        "pattern": "^.+$",
                        "pattern_notes": "Matches on an entire line, regardless of content, not including an empty line."
                    },
                    "name": {
                        "description": "Name of the condition synonym.",
                        "type": "string",
                        "required": {
                            "requirement": true,
                            "conditionals": [],
                            "exclusions": []
                        },
                        "example": [""],
                        "pattern": "^.+$",
                        "pattern_notes": "Matches on an entire line, regardless of content, not including an empty line."
                    },
                    "resource": {
                        "description": "Resource the condition is defined in.",
                        "type": "string",
                        "required": {
                            "requirement": true,
                            "conditionals": [],
                            "exclusions": []
                        },
                        "example": ["DOID"],
                        "pattern": "^.+$",
                        "pattern_notes": "Matches on an entire line, regardless of content, not including an empty line."
                    },
                    "url": {
                        "description": "URL to the condition synonym in the resource",
                        "type": "string",
                        "required": {
                            "requirement": true,
                            "conditionals": [],
                            "exclusions": []
                        },
                        "example": ["https://disease-ontology.org/term/DOID:1612/"],
                        "pattern": "^(https?:\\/\\/)?([\\da-z\\.-]+)\\.([a-z\\.]{2,6})([\/\\w \\.-]*)*\/?$",
                        "pattern_notes": "Matches on a general URL format. The first part matches optionally on the inclusion of 'http://' or 'https://'. The second part matches on a domain name, allowing for digits, letters, dots, and hyphens. The third part matches the domain extension, like '.com' or '.org'. The last part allows for the URL to optionally end with a slash."
                    }
                }
            }
            
        }
    },
